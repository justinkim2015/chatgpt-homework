<section class="main">
  <div class="box">
    <h1 class='title'><%= @story.title %></h1>
    <div class="story-box"><p class="story"><%= @story.content %></p></div>
    <ol>
      <% @story.questions.each do |q| %>
        <li><%= q.content %> - <%= q.answer %></li>
      <% end %>
    </ol>
  
    <%= link_to 'Home', stories_path, class: 'link' %>
  </div>
</section>