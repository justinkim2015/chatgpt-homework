<div data-controller='hello'> 
  <nav id='navbar-mobile'>
    <%= link_to "AI STORY TiME", root_path, id: 'nav-title' %>
    <div data-action='click->hello#toggle'><%= image_tag('hamburger.png', class: "ham-button") %></div>
  </nav>
  
  <ul id='ham-menu' class='nav-links-mobile inactive' data-hello-target='menu'>
    <%= link_to 'Home', root_path, class: 'nav-link' %>
    <%= link_to 'All Stories', stories_path, class: 'nav-link' %>
    <% if current_user.nil? %>
      <%= link_to 'Log in', new_user_session_path, class: 'nav-login' %>
    <% else  %>
      <%= link_to 'Log out', destroy_user_session_path, data: {turbo_method: :delete}, class: 'nav-login' %>
    <% end %>
  </ul>
</div>
